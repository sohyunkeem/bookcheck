<mvc:View controllerName="sync.c201.bookcheck.controller.App"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:f="sap.f">

    <Shell id="shell">
        <App id="app">
            <pages>
                <f:FlexibleColumnLayout
                    id="fcl"
                    stateChange=".onStateChanged"
                    backgroundDesign="Solid"
                    layout="{fcl>/layout}">
                </f:FlexibleColumnLayout>
            </pages>
        </App>
    </Shell>
</mvc:View>